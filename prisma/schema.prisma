generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barang {
  id Int @id @unique @default(autoincrement())
  kode String @db.VarChar(10)
  nama String @db.VarChar(100)
  harga Decimal
  sales_details SalesDetail[]

  @@map("m_barang")
}

model Customer {
  id Int @id @unique @default(autoincrement())
  kode String @db.VarChar(10)
  nama String @db.VarChar(100)
  telp String? @db.VarChar(20)
  sales Sales[]

  @@map("m_customer")
}

model Sales {
  id Int @id @unique @default(autoincrement())
  kode String @db.VarChar(10)
  tgl DateTime
  cust_id Int
  subtotal Decimal
  diskon Decimal?
  ongkir Decimal?
  total_bayar Decimal
  no_transaksi String @unique @db.Uuid @default(uuid())
  customer Customer @relation(fields: [cust_id], references: [id])
  sales_details SalesDetail[]

  @@map("t_sales")
}

model SalesDetail {
  sales_id Int
  barang_id Int
  harga_bandrol Decimal
  qty Int
  diskon_pct Decimal?
  diskon_nilai Decimal?
  harga_diskon Decimal
  total Decimal
  sales Sales @relation(fields: [sales_id], references: [id])
  barang Barang @relation(fields: [barang_id], references: [id])

  @@id([sales_id, barang_id])
  @@map("t_sales_det")
}
